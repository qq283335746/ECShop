using System;

namespace TygaSoft.CustomThread
{
    public interface IThread
    {
        /// <summary>
        /// 线程启动
        /// </summary>
        void ThreadStart();

        /// <summary>
        /// 线程终止
        /// </summary>
        void ThreadStop();

        /// <summary>
        /// 线程暂停
        /// </summary>
        void ThreadSuspend();

        /// <summary>
        /// 线程继续
        /// </summary>
        void ThreadContinue();
    }
}
